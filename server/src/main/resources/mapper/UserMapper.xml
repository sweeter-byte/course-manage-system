<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.course.system.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.course.system.entity.User">
        <id column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="phone_number" property="phoneNumber" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="student_id" property="studentId" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="college" property="college" jdbcType="VARCHAR"/>
        <result column="major" property="major" jdbcType="VARCHAR"/>
        <result column="class_name" property="className" jdbcType="VARCHAR"/>
        <result column="register_time" property="registerTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.course.system.entity.User">
        INSERT INTO users (user_id, username, password, real_name, phone_number, email, role, student_id, teacher_id, college, major, class_name)
        VALUES (#{userId}, #{username}, #{password}, #{realName}, #{phoneNumber}, #{email}, #{role}, #{studentId}, #{teacherId}, #{college}, #{major}, #{className})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <select id="selectByPhoneNumber" resultMap="BaseResultMap">
        SELECT * FROM users WHERE phone_number = #{phoneNumber}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM users
    </select>

    <update id="update" parameterType="com.course.system.entity.User">
        UPDATE users
        SET username = #{username},
            real_name = #{realName},
            email = #{email},
            college = #{college},
            major = #{major},
            class_name = #{className}
        WHERE user_id = #{userId}
    </update>

    <update id="updatePassword">
        UPDATE users
        SET password = #{password}
        WHERE user_id = #{userId}
    </update>

    <delete id="delete">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>
</mapper>
