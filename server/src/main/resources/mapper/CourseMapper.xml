<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.course.system.mapper.CourseMapper">
    <resultMap id="BaseResultMap" type="com.course.system.entity.Course">
        <id column="course_id" property="courseId" jdbcType="VARCHAR"/>
        <result column="creator_id" property="creatorId" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="course_name" property="courseName" jdbcType="VARCHAR"/>
        <result column="course_description" property="courseDescription" jdbcType="VARCHAR"/>
        <result column="enrollment_count" property="enrollmentCount" jdbcType="INTEGER"/>
        <result column="course_start_date" property="courseStartDate" jdbcType="DATE"/>
        <result column="course_end_date" property="courseEndDate" jdbcType="DATE"/>
        <result column="course_status" property="courseStatus" jdbcType="VARCHAR"/>
        <result column="course_semester" property="courseSemester" jdbcType="VARCHAR"/>
        <result column="course_location" property="courseLocation" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.course.system.entity.Course">
        INSERT INTO courses (course_id, creator_id, teacher_id, course_name, course_description, enrollment_count, course_start_date, course_end_date, course_status, course_semester, course_location)
        VALUES (#{courseId}, #{creatorId}, #{teacherId}, #{courseName}, #{courseDescription}, #{enrollmentCount}, #{courseStartDate}, #{courseEndDate}, #{courseStatus}, #{courseSemester}, #{courseLocation})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM courses WHERE course_id = #{courseId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM courses
    </select>

    <select id="selectByTeacherId" resultMap="BaseResultMap">
        SELECT * FROM courses WHERE teacher_id = #{teacherId}
    </select>

    <update id="update" parameterType="com.course.system.entity.Course">
        UPDATE courses
        SET course_name = #{courseName},
            course_description = #{courseDescription},
            course_status = #{courseStatus},
            course_location = #{courseLocation}
        WHERE course_id = #{courseId}
    </update>

    <delete id="delete">
        DELETE FROM courses WHERE course_id = #{courseId}
    </delete>
</mapper>
