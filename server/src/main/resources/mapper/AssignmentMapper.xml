<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.course.system.mapper.AssignmentMapper">
    <resultMap id="BaseResultMap" type="com.course.system.entity.Assignment">
        <id column="assignment_id" property="assignmentId" jdbcType="VARCHAR"/>
        <result column="course_id" property="courseId" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="assignment_title" property="assignmentTitle" jdbcType="VARCHAR"/>
        <result column="assignment_content" property="assignmentContent" jdbcType="VARCHAR"/>
        <result column="start_time" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="assignment_status" property="assignmentStatus" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.course.system.entity.Assignment">
        INSERT INTO assignments (assignment_id, course_id, teacher_id, assignment_title, assignment_content, start_time, end_time, assignment_status)
        VALUES (#{assignmentId}, #{courseId}, #{teacherId}, #{assignmentTitle}, #{assignmentContent}, #{startTime}, #{endTime}, #{assignmentStatus})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM assignments WHERE assignment_id = #{assignmentId}
    </select>

    <select id="selectByCourseId" resultMap="BaseResultMap">
        SELECT * FROM assignments WHERE course_id = #{courseId}
    </select>

    <update id="update" parameterType="com.course.system.entity.Assignment">
        UPDATE assignments
        SET assignment_title = #{assignmentTitle},
            assignment_content = #{assignmentContent},
            end_time = #{endTime},
            assignment_status = #{assignmentStatus}
        WHERE assignment_id = #{assignmentId}
    </update>

    <delete id="delete">
        DELETE FROM assignments WHERE assignment_id = #{assignmentId}
    </delete>
</mapper>
