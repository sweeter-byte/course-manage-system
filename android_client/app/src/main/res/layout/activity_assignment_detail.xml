<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDetailAssignmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Assignment Title" />

    <TextView
        android:id="@+id/tvDetailAssignmentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Assignment Content Details..."
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Answer:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAnswerContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="#F0F0F0"
        android:gravity="top|start"
        android:padding="8dp"
        android:hint="Type your answer here..."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSubmitAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Submit Assignment" />

    <Button
        android:id="@+id/btnViewQA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Q&amp;A"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>
